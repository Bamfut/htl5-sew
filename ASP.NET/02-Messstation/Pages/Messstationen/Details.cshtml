@page
@model _02_Messstation.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Messstation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Messstation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messstation.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Messstation.Betriebsdauer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Messstation.Betriebsdauer)
        </dd>
        @{
            foreach (var messwert in Model.Messwerte)
            {
                <dt class="col-sm-2">
                    Messwert: @messwert.Id
                </dt>
                <dd class="col-sm-10">
                    @messwert.Wert @messwert.Einheit
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Messstation.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
